@tailwind base;
@tailwind components;
@tailwind utilities;

@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+Arabic:wght@300;400;500;600;700&display=swap');

.font-arabic {
  font-family: 'Noto Sans Arabic', sans-serif;
}

/* RTL Support */
.rtl {
  direction: rtl;
}

.ltr {
  direction: ltr;
}

/* Smooth scrolling */
html {
  scroll-behavior: smooth;
}